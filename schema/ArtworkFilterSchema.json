{
  "$id": "https://raw.githubusercontent.com/pCYSl5EDgo/PixivApi/main/schema/ArtworkFilterSchema.json",
  "$schema": "https://json-schema.org/draft-04/schema",
  "additionalProperties": false,
  "description": "A filter for artwork json file",
  "properties": {
    "$schema": {
      "format": "uri",
      "type": "string"
    },
    "bookmark": {
      "type": "boolean"
    },
    "count": {
      "minimum": 0,
      "type": "integer"
    },
    "date": {
      "additionalProperties": false,
      "properties": {
        "since": {
          "format": "date",
          "type": "string"
        },
        "until": {
          "$ref": "#/properties/date/properties/since"
        }
      },
      "type": "object"
    },
    "file-filter": {
      "additionalProperties": false,
      "properties": {
        "original": {
          "additionalItems": false,
          "type": "object",
          "properties": {
            "max": {
              "type": "integer"
            },
            "min": {
              "anyOf": [
                {
                  "type": "string",
                  "enum": [ "all" ]
                },
                {
                  "type": "integer"
                }
              ]
            }
          }
        },
        "thumbnail": {
          "$ref": "#/properties/file-filter/properties/original"
        },
        "ugoira": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "height": {
      "additionalProperties": false,
      "properties": {
        "max": {
          "minimum": 0,
          "type": "integer"
        },
        "min": {
          "minimum": 0,
          "type": "integer"
        }
      },
      "type": "object"
    },
    "hide-filter": {
      "additionalProperties": false,
      "properties": {
        "allow": {
          "enum": [
            "not-hidden",
            "low-quality",
            "irrelevant",
            "external-link",
            "dislike",
            "crop"
          ]
        },
        "disallow": { "$ref": "#/properties/hide-filter/properties/allow" }
      },
      "type": "object"
    },
    "id-filter": {
      "additionalProperties": false,
      "properties": {
        "id": {
          "items": {
            "minimum": 0,
            "type": "integer"
          },
          "minItems": 1,
          "type": "array",
          "uniqueItems": true
        },
        "ignore-id": {
          "$ref": "#/properties/id-filter/properties/id"
        }
      },
      "type": "object"
    },
    "mute": {
      "type": "boolean"
    },
    "officially-removed": {
      "type": "boolean"
    },
    "offset": {
      "$ref": "#/properties/count"
    },
    "order": {
      "enum": [
        "reverse-id",
        "id",
        "reverse-bookmarks",
        "bookmarks",
        "reverse-view",
        "view",
        "user",
        "reverse-user"
      ]
    },
    "page-count": {
      "$ref": "#/properties/height"
    },
    "r18": {
      "type": "boolean"
    },
    "tag-filter": {
      "additionalProperties": false,
      "description": "A filter for text json file",
      "properties": {
        "exact": {
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "type": "array",
          "uniqueItems": true
        },
        "ignore-exact": {
          "$ref": "#/properties/tag-filter/properties/exact"
        },
        "ignore-partial": {
          "$ref": "#/properties/tag-filter/properties/exact"
        },
        "partial": {
          "$ref": "#/properties/tag-filter/properties/exact"
        },
        "or": {
          "type": "boolean"
        },
        "ignore-or": {
          "type": "boolean"
        }
      },
      "title": "TextFilter",
      "type": "object"
    },
    "title-filter": {
      "$ref": "#/properties/tag-filter"
    },
    "total-bookmarks": {
      "$ref": "#/properties/height"
    },
    "total-view": {
      "$ref": "#/properties/height"
    },
    "type": {
      "enum": [
        "illust",
        "manga",
        "ugoira"
      ]
    },
    "user-filter": {
      "additionalProperties": false,
      "description": "A filter for user json file",
      "properties": {
        "follow": {
          "type": "boolean"
        },
        "id-filter": {
          "additionalProperties": false,
          "properties": {
            "id": {
              "items": {
                "minimum": 0,
                "type": "integer"
              },
              "minItems": 1,
              "type": "array",
              "uniqueItems": true
            },
            "ignore-id": {
              "items": {
                "minimum": 0,
                "type": "integer"
              },
              "minItems": 1,
              "type": "array",
              "uniqueItems": true
            }
          },
          "type": "object"
        },
        "name-filter": {
          "additionalProperties": false,
          "description": "A filter for text json file",
          "properties": {
            "exact": {
              "items": {
                "type": "string"
              },
              "minItems": 1,
              "type": "array",
              "uniqueItems": true
            },
            "exact-or": {
              "type": "boolean"
            },
            "ignore-exact": {
              "$ref": "#/properties/user-filter/properties/name-filter/properties/exact"
            },
            "ignore-exact-or": {
              "type": "boolean"
            },
            "ignore-partial": {
              "$ref": "#/properties/user-filter/properties/name-filter/properties/exact"
            },
            "ignore-partial-or": {
              "type": "boolean"
            },
            "partial": {
              "$ref": "#/properties/user-filter/properties/name-filter/properties/exact"
            },
            "partial-or": {
              "type": "boolean"
            }
          },
          "title": "TextFilter",
          "type": "object"
        },
        "only-registered": {
          "type": "boolean"
        },
        "show-hidden": {
          "type": "boolean"
        },
        "tag-filter": {
          "$ref": "#/properties/tag-filter"
        }
      },
      "title": "UserFilter",
      "type": "object"
    },
    "visible": {
      "type": "boolean"
    },
    "width": {
      "$ref": "#/properties/height"
    }
  },
  "title": "ArtworkFilter",
  "type": "object"
}